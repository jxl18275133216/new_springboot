<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxl.shabby_for_me.system.dao.SysUserDao">
    <!--保存用户-->
    <insert id="insertObject"
            parameterType="com.jxl.shabby_for_me.system.entity.User"
            >
        insert into
        user
        (username,userpwd,createtime,modifytime)
        values
        (#{username},#{userpwd},now(),now() )
    </insert>
    <!--删除用户-->
    <delete id="deleteUser"
            parameterType="java.lang.Integer">
        delete
        from
        user
        where
        id = #{id}
    </delete>
    <!--改-->
    <update id="updateObject"
            parameterType="com.jxl.shabby_for_me.system.entity.User">
        update
        user
        set
        userpwd = #{userpwd},
        modifytime = now()
        where
        id = #{id}
    </update>
    <!--用户名模糊查询总记录数-->
    <select id="getRowCount"
            parameterType="java.lang.String"
            resultType="java.lang.Integer">
        select count(*)
        from
        user
        <where>
            <if test="username !=null and username != ''">
                username like concat('%',#{username},'%');
            </if>
        </where>
    </select>
    <select id="findPageObjects"
            resultType="com.jxl.shabby_for_me.system.entity.User">
        select
        id,username,userpwd,createtime,modifytime
        from
        user
        <where>
            <if test="username != null and username != ''">
                username LIKE CONCAT('%',#{username},'%');
            </if>
            AND
        </where>
        LIMIT #{startIndex},#{pageSize}
    </select>
    <select id="findObjectByName"
            resultType="com.jxl.shabby_for_me.system.entity.User">
        select
        id,
        username,
        userpwd,
        createtime,
        modifytime
        from
        user
        <where>
            <if test="username !=null and username != ''">
                username = #{username}
            </if>
                and
                userpwd = #{userpwd}
        </where>
    </select>
</mapper>