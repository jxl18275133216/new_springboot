<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxl.shabby_for_me.system.dao.SysUserDao">
    <!--保存用户-->
    <insert id="insertUser"
            parameterType="com.jxl.shabby_for_me.system.entity.User"
            >
        insert into
        user
        (username,userpwd,createtime,modifytime)
        values
        (#{username},#{userpwd},now(),now() )
    </insert>
    <!--根据id查询-->
    <select id="findById"
            parameterType="java.lang.Integer"
            resultType="com.jxl.shabby_for_me.system.entity.User">
        select
          id,
          username,
          createtime,
          modifytime
        from
          user
        where
          userid = #{id}
    </select>
    <!--根据name查询-->
    <select id="findByName"
            parameterType="java.lang.String"
            resultType="com.jxl.shabby_for_me.system.entity.User">
        select
          id,
          username,
          createtime,
          modifytime
        from
          user
        where
          username = #{name}
          and
          userpwd = #{pwd}
    </select>
    <select id="findAll"
            resultType="com.jxl.shabby_for_me.system.entity.User">
        select
        *
        from
        user
    </select>
</mapper>